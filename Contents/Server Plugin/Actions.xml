<?xml version="1.0"?>
<Actions>
	<Action id="send">
		<Name>Send Push Notification</Name>
		<CallbackMethod>sendPushNotification</CallbackMethod>
		<ConfigUI>
			<SupportURL>https://github.com/indigodomotics/indigo-pushover/issues</SupportURL>
			<Field id="actionToken" type="menu" default="">
				<Label>Application API Key(s):</Label>
                <List class="self" method="generateTokenList"/>
				<Description>Application token</Description>
			</Field>
			<Field id="sep0" type="separator"/>
			<Field id="messageTitle" type="textfield" default="">
				<Label>Title:</Label>
				<Description>Message Title</Description>
			</Field>
			<Field id="hlpMessageTitle" type="label" fontSize="mini" alignWithControl="true">
				<Label>this is your message's title. if left blank, your app's name is used. note: it can contain variables.</Label>
			</Field>
			<Field id="messageBody" type="textfield" default="">
				<Label>Message:</Label>
				<Description>Message body text</Description>
			</Field>
			<Field id="sound" type="menu" defaultValue="pushover">
				<Label>Sound:</Label>
				<List>
					<Option value="pushover">Pushover (default)</Option>
					<Option value="none">None (silent)</Option>
					<Option value="bike">Bike</Option>
					<Option value="bugle">Bugle</Option>
					<Option value="cashregister">Cash Register</Option>
					<Option value="classical">Classical</Option>
					<Option value="cosmic">Cosmic</Option>
					<Option value="falling">Falling</Option>
					<Option value="gamelan">Gamelan</Option>
					<Option value="incoming">Incoming</Option>
					<Option value="intermission">Intermission</Option>
					<Option value="magic">Magic</Option>
					<Option value="mechanical">Mechanical</Option>
					<Option value="pianobar">Piano Bar</Option>
					<Option value="siren">Siren</Option>
					<Option value="spacealarm">Space Alarm</Option>
					<Option value="tugboat">Tug Boat</Option>
					<Option value="alien">Alien Alarm (long)</Option>
					<Option value="climb">Climb (long)</Option>
					<Option value="persistent">Persistent (long)</Option>
					<Option value="echo">Pushover Echo (long)</Option>
					<Option value="updown">Up Down (long)</Option>
				</List>
				<Description>Message sound goes here</Description>
			</Field>
			<Field id="sep1" type="separator"/>
			<Field id="deviceName" type="textfield" default="">
				<Label>Device:</Label>
				<Description>Device name</Description>
			</Field>
			<Field id="supplementaryUrl" type="textfield" default="">
				<Label>URL:</Label>
				<Description>Supplementary URL</Description>
			</Field>
			<Field id="supplementaryUrlTitle" type="textfield" default="">
				<Label>URL Title:</Label>
				<Description>Supplementary URL Title</Description>
			</Field>
            <Field id="priority" type="menu" defaultValue="0">
				<Label>Priority:</Label>
				<List>
					<Option value="-2">Lowest (no notification)</Option>
					<Option value="-1">Low (quiet notification)</Option>
					<Option value="0">Normal (notification)</Option>
					<Option value="1">High (bypass quiet hours)</Option>
					<Option value="2">Emergency (requires confirmation)</Option>
				</List>
				<Description>Set the message priority</Description>
			</Field>
			<Field id="sep2" type="separator" visibleBindingId="priority" visibleBindingValue="2"/>
	        <Field id="lblEmergencyInformation" type="label" fontSize="small" fontColor="darkgray">
		        <Label>Interval and Expiry are mandatory for setting the Emergency Priority</Label>
		        <Label>Interval: The # of seconds between each retry (at least 30 seconds)</Label>
		        <Label>Expiry: The # of seconds a confirmation is asked for (maximum 86400 seconds).</Label>
		        <Label>Callback URL: A publicly-accessible URL after confirmation.</Label>
	        </Field>
            <Field id="retryInterval" type="textfield" default="60" visibleBindingId="priority" visibleBindingValue="2">
                <Label>Interval:</Label>
                <Description>The # of seconds between each retry (at least 30 seconds)</Description>
            </Field>
            <Field id="confirmationExpiry" type="textfield" default="300" visibleBindingId="priority" visibleBindingValue="2">
                <Label>Expiry:</Label>
                <Description>The # of seconds a confirmation is asked for (maximum 86400 seconds).</Description>
            </Field>
            <Field id="callbackUrl" type="textfield" default="" visibleBindingId="priority" visibleBindingValue="2">
                <Label>Callback URL:</Label>
                <Description>A publicly-accessible URL after confirmation.</Description>
            </Field>
		</ConfigUI>
	</Action>
</Actions>
